{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SmartDoc",
  "version": "0.1.0",
  "identifier": "com.smartdoc.desktop",
  "build": {
    "beforeBuildCommand": "scripts/build-frontend.sh",
    "beforeDevCommand": "scripts/build-frontend.sh",
    "frontendDist": "../app/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "SmartDoc",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "msi", "appimage"],
    "icon": ["icons/icon.png"]
  }
}
